model Payment {
  id              String   @id @default(uuid())
  stripePaymentId String   @unique
  bookingId       String?
  amount          Float
  currency        String   @default("usd")
  status          String
  createdAt       DateTime @default(now())
  booking         Booking? @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}